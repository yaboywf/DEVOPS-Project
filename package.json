{
  "name": "chess-club-ranking",
  "version": "1.0.0",
  "description": "Chess Club Ranking System - DevOps Project Part 1",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "prepare": "husky",
    "lint": "eslint .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "jest --verbose",
    "test:coverage": "jest --verbose --coverage",
