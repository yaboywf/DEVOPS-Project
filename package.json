    "express-status-monitor": "^1.3.4",
    "winston": "^3.19.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@types/node": "^25.0.9",
    "eslint": "^9.39.2",
    "html-validate": "^10.5.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "nodemon": "^3.1.11",
    "prettier": "^3.8.0",
    "stylelint": "^17.0.0",
    "stylelint-config-standard": "^40.0.0",
    "stylelint-formatter-html": "^1.0.1",
    "supertest": "^7.2.2"
